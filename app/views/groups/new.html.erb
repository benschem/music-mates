<h1><%= @concert.artist.name %></h1>
<div class="friend-list">
  <h2>Your Friends</h2>
  <div class="search-bar">
  <div class="create-group">
    <%= simple_form_for [@concert, @group] do |f| %>
      <ul>
        <% @users.each do |user| %>
        <li><%= user.first_name %> <%= check_box_tag 'user_ids[]', user.id -%></li>
        <% end %>
      </ul>
      <%= f.submit "Let's Go!", class: "btn" %>
    <% end %>
  </div>
</div>

