<div id="page-container">
  <%= render "shared/navbar" %>

  <div class="search">
    <%= render "shared/search-bar" %>
  </div>

  <% @concerts.each do |concert| %>
  <%= link_to concert_path(concert) do %>
    <div class="concert-card" style="background-image: linear-gradient(black, black), url(<%= concert.artist.image_url %>)">
      <div class="concert-info">
        <h2><strong><%= concert.artist.name %></strong></h2>
        <p><strong><%= concert.date.strftime("%A %e %B %Y") %></strong></p>
        <p><%= concert.venue %>, <%= concert.location %></p>
      </div>
      <div class="concert-avatars">
      <% concert.users.without_me(current_user).first(5).each do |user|%>
          <img src="<%= user.avatar %>" class="avatar">
        <% end %>
        <% if concert.users.count > 5 %>
          <!--  userfollow - 5 -->
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
        <% end %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
