<div id="page-container">
  <%= render "shared/navbar" %>

  <div class="search">
    <%= render "shared/search-bar" %>
  </div>

  <% @concerts.each do |concert| %>
    <%= link_to concert_path(concert) do %>
      <div class="concert-card">
        <div class="concert-info">
          <h2><strong><%= concert.artist.name %></strong></h2>
          <p><strong><%= concert.date %></strong></p>
          <p><%= concert.venue %>, <%= concert.location %></p>
        </div>
        <div class="concert-avatars">
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
          <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
        </div>
      </div>
    <% end %>
  <% end %>


</div>
