<div id="page-container-groups">

  <div class="show">
    <h1>These are the concerts you're attending!</h1>
  </div>

  <% if @groups.count >= 1 %>
    <% @groups.each do |group| %>
      <%= link_to group_path(group) do %>
      <% concert = group.concert %>
        <div class="concert-card">
          <div class="img-grey" style="background-image: url(<%= concert.artist.image_url %>)"></div>
          <div class="img-gradient"></div>
          <div class="concert-info">
            <h2><strong><%= concert.artist.name %></strong></h2>
            <p><strong><%= concert.date.strftime("%A %e %B %Y") %></strong></p>
            <p><%= concert.venue %>, <%= concert.location %></p>
          </div>
          <div class="concert-avatars">
            <% concert.users.without_me(current_user).first(5).each do |user|%>
              <!-- <%= cl_image_tag user.photo.key, class: "avatar" %> -->
              <%= user.avatar %>
            <% end %>
            <% if concert.users.without_me(current_user).count > 5 %>
              <!--  userfollow - 5 -->
            <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <p>You're not attending any concerts yet!</p>
  <% end %>
</div>
