<div class="navbar-space"></div>
<%= render "shared/navbar" %>

<div class="search">
  <%= render "shared/search-bar" %>
</div>

<% @concerts.each do |concert| %>
  <%= link_to concert_path(concert) do %>
    <div class="concert-card">
      <div class="concert-info">
        <h2><strong><%= concert.artist.name %></strong></h2>
        <p><strong><%= concert.date %></strong></p>
        <p><%= concert.venue %>, <%= concert.location %></p>
      </div>
   <% follows = concert.artist.follows %>
   <% userfollow = [] %>
      <div class="concert-avatars">
        <% follows.each_with_index do |f, i|%>
          <% break if i == 4 || i == nil %>
          <% @users.each_with_index do |user, i| %>
            <% if (i != 4 || i != nil) && (user == f.user) %>
              <% userfollow << user %>
              <img src="<%= user.avatar %>" class="avatar">
            <% end %>
            <% if userfollow.count > 5 %>
              <!-- Show a number that is userfollow - 5 -->
              <img src="https://s2.coinmarketcap.com/static/img/coins/200x200/5426.png" class="avatar">
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<div id="concert-index-footer"></div>

<div class="footer-musicmates">
  <%= link_to "/concerts", class: "icons target", id: "target1" do %>
    <i class="fa-solid fa-house text-success"></i>
  <% end %>
  <%= link_to "/groups", class: "icons target", id: "target2" do %>
    <i class="fa-solid fa-clipboard-list"></i>
  <% end %>
  <%= link_to "/invitations", class: "icons target", id: "target3" do %>
    <i class="fa-solid fa-envelope"></i>
  <% end %>
  <%= link_to "/concerts", class: "icons target", id: "target4" do %>
    <i class="fa-solid fa-user"></i>
  <% end %>
</div>

