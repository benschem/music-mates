<div id="page-container-concertshow">
  <div class="show">
    <%= image_tag @concert.artist.image_url, class: "show-image" %>
    TODO: <%= @concert.artist.name %> centered in the image above

    <h1 id="show-h1">Want to go?</h1>
    <p>Create a group to invite some friends!</p>

    <div class="show-detail-container">
      <div class="show-emoji">
        📅
      </div>
      <div class="show-detail">
        <h2><%= @concert.date.strftime("%A %e %B %Y") %></h2>
        <h3>From <%= @concert.date.strftime("%l:%M %P %Z") %></h3>
        <%# TIME DOES NOT WORK %>
        <!-- Time.current.in_time_zone("America/New_York").strftime("TZ is: %Z") # => "TZ is: EDT" -->
      </div>
    </div>
    <div class="show-detail-container">
      <div class="show-emoji">
        📍
      </div>
      <div class="show-detail">
        <h2>At <%= @concert.venue %></h2>
        <h3>In <%= @concert.location %></h3>
      </div>
    </div>
    <div class="show-detail-container">
      <div class="show-emoji">
        🧑‍🤝‍🧑
      </div>
      <div class="show-detail">
        <% unless @concert.users.without_me(current_user).count == 0 %>
          <h2><%= pluralize(@concert.users.without_me(current_user).count, 'mate') %></h2>
          <h3>might be interested</h3>
        <% else %>
          <h2>None of your friends are going to this concert...</h2>
          <h3>This will be a solo trip.</h3>
        <% end %>
      </div>
    </div>

    <div class="show-desc">
      <p><%= @concert.description %></p>
    </div>
  </div>

  <div id="show-btn-container">
    <%= link_to "Create a group!", new_concert_group_path(@concert), id:"show-btn" %>
  </div>

</div>
